{
    "pluginAlias": "EO1",
    "pluginType": "accessory",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "Electric Objects EO1",
                "description": "The name that will appear in your Homebridge log."
            },
            "accessory": {
                "title": "Accessory",
                "type": "string",
                "default": "EO1",
                "required": true,
                "description": "This must be EO1."
            },
            "username": {
                "title": "Username",
                "type": "string",
                "placeholder": "<username>",
                "required": true,
                "description": "Your Electric Objects username."
            },
            "password": {
                "title": "Password",
                "type": "string",
                "placeholder": "<password>",
                "required": true,
                "description": "Your Electric Objects password."
            },
            "pollingInterval": {
                "title": "Polling Interval",
                "type": "number",
                "required": true,
                "placeholder": 300,
                "minLength": 1,
                "description": "Default polling interval to Electric Objects."
            },
            "serial": {
                "title": "Serial",
                "type": "string",
                "required": true,
                "placeholder": "<serial>",
                "minLength": 1,
                "description": "The Serial you want shown in the Home App."
            },
            "model": {
                "title": "Model",
                "type": "string",
                "required": true,
                "placeholder": "<model>",
                "minLength": 1,
                "description": "The Model you want shown in the Home App."
            }
        }
    }
}
